---
import Carousel from "../../../components/carousel/carousel.astro";
import Amenities from "../../../components/projects/amenities/amenities.astro";
import Enquire from "../../../components/projects/enquire/enquire.astro";
import FloorPlan from "../../../components/projects/floor-plan/floor-plan.astro";
import { Project } from "../../../components/projects/info/info-form/info-form";
import Info from "../../../components/projects/info/info.astro";
import Logo from "../../../components/projects/logo/logo.astro";
import Layout from "../../../layouts/Layout.astro";

const images = [
	"/home/hero-mangalya-one.webp",
	"/home/hero-mangalya-two.webp",
	"/home/hero-mangalya-three.webp",
];

const project = "Horizon Anant";
const description =
	"Horizon Anant, a visionary residential project, now comes under the esteemed management of Mangalya Group. Originally conceptualized by Horizon Dwellings Pvt Ltd, this landmark development has been elevated under the expert stewardship of Mangalya Group, renowned for its commitment to excellence in real estate. With a rich legacy of delivering transformative residential projects, Mangalya Group brings professionalism, timely delivery, premium quality, and customer satisfaction to the forefront. Together, they have redefined affordable luxury, creating a living experience that transcends mere living spaces. it's a -lifestyle crafted with passion, precision, and perfection.";

const aminitiesText = "Mangalya Horizon Anant Features";
const aminitiesItem = [
	{
		name: "Gym",
		image: "/projects/amenities/gym.png",
	},
	{
		name: "Swimming Pool",
		image: "/projects/amenities/swimming-pool.png",
	},
	{
		name: "Spacious Parking",
		image: "/projects/amenities/parking.png",
	},
];

const map = "/projects/location/anant.png";

const floorPlans = [
	"/projects/floor-plan/anant/1-1.png",
	"/projects/floor-plan/anant/1-2.png",
	"/projects/floor-plan/anant/2-1.png",
	"/projects/floor-plan/anant/2-2.png",
	"/projects/floor-plan/anant/3-1.png",
	"/projects/floor-plan/anant/3-2.png",
];
---

<Layout title="Mangalya Group - Anant Horizon">
	<Carousel images={images} />

	<Logo logo="/projects/anant.svg" project={project} />

	<Info
		projectName={project}
		project={Project.anant}
		description={description}
	/>

	<FloorPlan
		projectName={project}
		project={Project.anant}
		items={floorPlans}
	/>

	<Amenities text={aminitiesText} items={aminitiesItem} />

	<Enquire project={Project.anant} image={map} />
</Layout>
